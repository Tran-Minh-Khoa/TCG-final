<main>
    <section>
        <div class="section-wrapper">
            <form class="vstack gap-4 align-items-center justify-content-center" id="resetPasswordForm">
                <h1>Reset your password</h1>
                <div id="changePasswordWarning"></div>
                <div class="vstack gap-3 align-items-center justify-content-center">
                    <div class="form-floating">
                        <input type="password" class="form-control" id="new_password" name="new_password" placeholder="New password" required>
                        <label for="new_password">New password</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Confirm new password" required>
                        <label for="confirm_password">Confirm new password</label>
                    </div>
                </div>
                <button class="black-btn" type="submit">Reset password</button>
            </form>
        </div>
    </section>
</main>